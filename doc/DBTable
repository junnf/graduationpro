User
    {
        id:int
        name:varchar()
        passwd:MD5()
        profession_id:int Foreign_Key
        sexuality:int  0,1 0:female 1:male
        grade:int 1,2,3,4
        class:int
        tel:int
        old:int
    }

(profession_id,grade,class) -> class_table

Class
    {
        profession_id:int
        grade:int
        class:int
        date:date
        course_name:varchar()
        course_num:int()1,2 morning 3,4 afternoon 5,6 evening
        teacher_id:int()
        extra:varchar() //other information
    }

